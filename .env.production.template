# ChittyFinance Production Environment Template
# Use with: op inject -i .env.production.template -o .env

# Application Settings
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=op://ChittyFinance-Prod/Database/DATABASE_URL

# Security Configuration (Critical)
ENCRYPTION_KEY=op://ChittyFinance-Prod/Security/ENCRYPTION_KEY
SESSION_SECRET=op://ChittyFinance-Prod/Security/SESSION_SECRET

# Authentication (Replit Auth)
REPL_ID=op://ChittyFinance-Prod/Auth/REPL_ID
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=finance.chitty.cc

# API Keys
OPENAI_API_KEY=op://ChittyFinance-Prod/API-Keys/OPENAI_API_KEY
CHITTYCHAIN_API_KEY=op://ChittyFinance-Prod/API-Keys/CHITTYCHAIN_API_KEY
CHITTY_MCP_API_KEY=op://ChittyFinance-Prod/API-Keys/CHITTY_MCP_API_KEY

# ChittyChain Configuration
CHITTYCHAIN_RPC_ENDPOINT=https://rpc.chittychain.io
CHITTYCHAIN_EXPLORER_API=https://api.chittyscan.io
CHITTYCHAIN_WS_ENDPOINT=wss://ws.chittychain.io
CHITTY_MCP_ENDPOINT=https://mcp.chittychain.io/api

# Security Settings
ALLOWED_ORIGINS=https://finance.chitty.cc,https://chitty.cc
BLOCKED_IP_RANGES=

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=op://ChittyFinance-Prod/Monitoring/SENTRY_DSN