# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database

# Security Configuration
ENCRYPTION_KEY=# 64 hex characters (32 bytes) - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=# At least 32 characters of random data

# Authentication
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-domain.replit.dev

# API Keys (ensure these are strong, unique keys)
OPENAI_API_KEY=your-openai-api-key
CHITTYCHAIN_API_KEY=your-chittychain-api-key
CHITTY_MCP_API_KEY=your-chitty-mcp-api-key

# ChittyChain Configuration
CHITTYCHAIN_RPC_ENDPOINT=https://rpc.chittychain.io
CHITTYCHAIN_EXPLORER_API=https://api.chittyscan.io
CHITTYCHAIN_WS_ENDPOINT=wss://ws.chittychain.io
CHITTY_MCP_ENDPOINT=https://mcp.chittychain.io/api

# Security Settings
ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com
BLOCKED_IP_RANGES=# Comma-separated list of IP ranges to block

# Application Settings
NODE_ENV=development